<%= render 'shared/navbar' %>
<%= render 'shared/banner' %>
<div class="px-4">
  <h2>Popular Categories</h2>
  <div class="cards">
    <%= link_to chefs_path(:query => "Dessert")  do%>
      <%= image_tag "doughnut.png", class: "card-category" %>
      <% end %>
    <%= link_to chefs_path(:query => "Asian") do%>
      <%= image_tag "dim-sum.png", class: "card-category" %>
    <% end %>
    <%= link_to chefs_path(:query => "Italian") do%>
      <%= image_tag "pasta.png", class: "card-category" %>
    <% end %>
    <%= link_to chefs_path(:query => "Vegetarian") do%>
      <%= image_tag "ratatouille.png", class: "card-category" %>
    <% end %>
    <%= link_to chefs_path(:query => "Fast Food") do%>
      <%= image_tag "burger-sandwich.png", class: "card-category" %>
    <% end %>
</div>
  <div class="my-5">
    <h2 class="mb-5">Popular Chefs</h2>
      <div class="d-flex">
        <div class="container">
          <div class="row row-cols-5">
        <% @chefs[0..4].each do |chef| %>
          <%= link_to chef_path(chef) do  %>
            <div class="card-chef mr-5">
              <% if chef.photos.attached? %>
                <%= cl_image_tag chef.photos.first.key %>
              <% else %>
                <img src="https://www.thetimes.co.uk/imageserver/image/%2Fmethode%2Ftimes%2Fprodmigration%2Fweb%2Fbin%2Fac1aab64-e6bd-3165-bd9f-9ecb9c4e66f2.jpg?crop=1500%2C1000%2C0%2C0&resize=1180" alt="">
              <% end %>
              <div class="card-chef-infos">
                <div>
                  <h4><%= chef.name %></h4>
                  <p><%= chef.location %></p>
                </div>
                <% if chef.avatar.attached? %>
                  <%= cl_image_tag chef.avatar.key, class:"card-chef-user avatar-bordered" %>
                <% else %>
                  <img class="card-chef-user avatar-bordered" src="https://www.thetimes.co.uk/imageserver/image/%2Fmethode%2Ftimes%2Fprodmigration%2Fweb%2Fbin%2Fac1aab64-e6bd-3165-bd9f-9ecb9c4e66f2.jpg?crop=1500%2C1000%2C0%2C0&resize=1180" alt="">
                <% end %>
              </div>
              <div class="mr-2 text-right">
                <span class="card-chef-category badge badge-pill badge-info m-2"> <%= chef.category %> </span>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>
