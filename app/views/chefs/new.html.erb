<div>
  <h1 class="text-center">Create a new chef profile</h1>
</div>

<div class="container col-6 col-lg-4">
    <%= simple_form_for(@chef) do |f| %>
      <%= f.input :name %>
      <%= f.input :location %>
      <%= f.input :description %>
      <%= f.input :price %>
      <%= f.input :photo, as: :file %>
      <div class="d-flex justify-content-between">
        <%= f.submit "Create", class: "btn-flat border-0" %>
        <%= link_to 'Back', chefs_path, class: "btn-flat" %>
      </div>
    <% end %>
</div>

